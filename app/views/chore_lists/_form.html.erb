<%=form_for @chore_list do |f| %>
    <%= f.label :name %>
    <%= t.text_field :name %> <br />
    <%= f.label :room %>
    <%= t.text_field :room %> <br />
    <%= f.fields_for :task |tk| %>
        <%= tk.label :name %>
        <%= tk.text_field :name %>
        <%= tk.label :details %>
        <%= tk.text_field :details %>
        <%= tk.label :task_for %>
        <%= tk.text_field :task_for %>
    <% end %>
    
    <%= f.submit %>
    <%= hidden_field_tag :user_id, user_id= %>
<% end %>