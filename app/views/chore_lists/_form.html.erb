<%= form_for @chore_list do |f| %>
    <%= f.label "ChoreList Name" %>
    <%= f.text_field :name %> <br />
    <%= f.label :room %>
    <%= f.text_field :room %> <br /><br />
    <%= f.fields_for :tasks, @chore_list.tasks.build do |tk| %>
        <%= tk.label "Task Name" %>
        <%= tk.text_field :name %> <br />
        <%= tk.label :details %>
        <%= tk.text_field :details %> <br />
        <%= tk.label "Task Assigned To" %>
        <%= tk.text_field :task_for %> <br />
    <% end %>
    <%= f.submit %>
<% end %>